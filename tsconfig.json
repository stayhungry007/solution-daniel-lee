{
  "compilerOptions": {
    "target": "ES6",  // Target version for JavaScript output
    "module": "commonjs",  // Use CommonJS module system
    "strict": true,  // Enables strict type checking
    "esModuleInterop": true,  // Enables importing non-ESM modules in an ESM-friendly way
    "skipLibCheck": true,  // Skip type-checking of declaration files
    "forceConsistentCasingInFileNames": true,  // Enforce consistent casing in file names
    "outDir": "./dist",  // Output directory for compiled files
    "rootDir": "./src",  // Directory containing source files
    "resolveJsonModule": true,  // Allow importing JSON files
    "types": ["node","koa"]  // Include Node.js types
  },
  "include": [
    "src/**/*"  // Include all files in src directory
  ],
  "exclude": [
    "node_modules"  // Exclude node_modules from compilation
  ]
}
